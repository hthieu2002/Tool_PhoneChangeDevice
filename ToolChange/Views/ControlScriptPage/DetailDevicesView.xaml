<Window x:Class="ToolChange.Views.ControlScriptPage.DetailDevicesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolChange.Views.ControlScriptPage"
        mc:Ignorable="d"
        Title="DetailDevicesView"
        Height="600"
        Width="450">
    <Grid Background="#F0F2F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"
                           MaxHeight="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="{Binding Title}"
               HorizontalAlignment="Center"
               VerticalContentAlignment="Center"
               VerticalAlignment="Center"
               HorizontalContentAlignment="Center"
               Margin="0,10,0,0"
               FontSize="14"
               FontWeight="Bold" />
        <Border Grid.Row="1"
                BorderThickness="1"
                CornerRadius="5"
                Background="#F0F2F5"
                BorderBrush="#F0F2F5"
                Padding="3"
                Margin="10,0,10,10">
            <Grid Margin="30,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0"
                      Margin="10,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="BRAND"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />

                    <Label Content="{Binding Brand}"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />
                </Grid>
                <Grid Grid.Row="1"
                      Margin="10,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="NAME"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />

                    <Label Content="{Binding Name}"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />
                </Grid>
                <Grid Grid.Row="2"
                      Margin="10,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="MODEL"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />

                    <Label Content="{Binding Model}"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />
                </Grid>
                <Grid Grid.Row="3"
                      Margin="10,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="OS"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />

                    <Label Content="{Binding Os}"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />
                </Grid>
                <Grid Grid.Row="4"
                      Margin="10,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="COUNTRY"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />

                    <Label Content="{Binding Country}"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />
                </Grid>
                <Grid Grid.Row="5"
                      Margin="10,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="SIM"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />

                    <Label Content="{Binding Sim}"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />
                </Grid>
                <Grid Grid.Row="6"
                      Margin="10,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="SERIAL"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />

                    <Label Content="{Binding Serial}"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />
                </Grid>
                <Grid Grid.Row="7"
                      Margin="10,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="CODE SIM"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />

                    <Label Content="{Binding Code}"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />
                </Grid>
                <Grid Grid.Row="8"
                      Margin="10,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="PHONE"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />

                    <Label Content="{Binding Phone}"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />
                </Grid>
                <Grid Grid.Row="9"
                      Margin="10,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="IMEI"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />

                    <Label Content="{Binding Imei}"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />
                </Grid>
                <Grid Grid.Row="10"
                      Margin="10,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="IMSI"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />

                    <Label Content="{Binding Imsi}"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />
                </Grid>
                <Grid Grid.Row="11"
                      Margin="10,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="ICCID"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />

                    <Label Content="{Binding Iccid}"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />
                </Grid>
               
                <Grid Grid.Row="13"
                      Margin="10,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="MAC"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />

                    <Label Content="{Binding Mac}"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontWeight="Bold" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
