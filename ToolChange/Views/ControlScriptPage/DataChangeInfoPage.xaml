<Page x:Class="ToolChange.Views.ControlScriptPage.DataChangeInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToolChange.Views.ControlScriptPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid Background="#F5F7FC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox Header="{Binding LanguageVM.TitileDataChangeInfo}"
                  FontWeight="Bold"
                  Padding="10,2,0,2"
                  Margin="5,10,0,0"
                  Grid.Column="0"
                  BorderBrush="#A0A0A0"
                  Style="{StaticResource MaterialDesignHeaderedContentControl}"
                  BorderThickness="1">
            <Border  Background="#F5F7FC"
                     CornerRadius="2"
                     BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <WrapPanel Orientation="Vertical"
                               Grid.Column="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top">
                        <Button Content="{Binding LanguageVM.ControlDataChangeInfo1}"
                                Margin="5,5,5,0"
                                Padding="10,5"
                                Background="#A28DFF"
                                Foreground="White"
                                FontSize="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Width="120" />

                        <Button Content="{Binding LanguageVM.ControlDataChangeInfo2}"
                                Margin="5,5,5,0"
                                Padding="10,5"
                                Background="#A28DFF"
                                Foreground="White"
                                FontSize="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Width="120" />

                        <Button Content="{Binding LanguageVM.ControlDataChangeInfo3}"
                                Margin="5,5,5,0"
                                Padding="10,5"
                                Background="#A28DFF"
                                Foreground="White"
                                FontSize="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Width="120" />

                        <Button Content="{Binding LanguageVM.ControlDataChangeInfo4}"
                                Margin="5,5,5,0"
                                Padding="10,5"
                                Background="#A28DFF"
                                Foreground="White"
                                FontSize="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Width="120" />
                    </WrapPanel>
                    <WrapPanel Orientation="Vertical"
                               Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top">
                        <Button Content="{Binding LanguageVM.ControlDataChangeInfo5}"
                                Margin="5,5,5,0"
                                Padding="10,5"
                                Background="#A28DFF"
                                Foreground="White"
                                FontSize="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Width="120" />

                        <Button Content="{Binding LanguageVM.ControlDataChangeInfo6}"
                                Margin="5,5,5,0"
                                Padding="10,5"
                                Background="#A28DFF"
                                Foreground="White"
                                FontSize="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Width="120" />

                        <Button Content="{Binding LanguageVM.ControlDataChangeInfo7}"
                                Margin="5,5,5,0"
                                Padding="10,5"
                                Background="#A28DFF"
                                Foreground="White"
                                FontSize="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Width="120" />

                        <Button Content="{Binding LanguageVM.ControlWaitReboot}"
                                Command="{Binding ScriptAutomationVM.AppendTextCommand}"
                                CommandParameter="WaitReboot()"
                                Margin="5,5,5,0"
                                Padding="10,5"
                                Background="#A28DFF"
                                Foreground="White"
                                FontSize="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Width="120" />
                        <Button Content="{Binding LanguageVM.ControlWaitInternet}"
                                Command="{Binding ScriptAutomationVM.AppendTextCommand}"
                                CommandParameter="WaitInternet()"
                                Margin="5,5,5,0"
                                Padding="10,5"
                                Background="#A28DFF"
                                Foreground="White"
                                FontSize="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Width="120" />
                    </WrapPanel>
                    <WrapPanel Orientation="Vertical"
                               Grid.Column="2"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top">
                        <Button Content="{Binding LanguageVM.ControlPushFile}"
                                Command="{Binding ScriptAutomationVM.AppendTextCommand}"
                                CommandParameter="PushFile(&quot;FromPC&quot;, &quot;SendToPhone&quot;)"
                                Margin="5,5,5,0"
                                Padding="10,5"
                                Background="#A28DFF"
                                Foreground="White"
                                FontSize="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Width="120" />

                        <Button Content="{Binding LanguageVM.ControlPullFile}"
                                Command="{Binding ScriptAutomationVM.AppendTextCommand}"
                                CommandParameter="PullFile(&quot;FromPhone&quot;, &quot;SendToPC&quot;)"
                                Margin="5,5,5,0"
                                Padding="10,5"
                                Background="#A28DFF"
                                Foreground="White"
                                FontSize="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Width="120" />

                    </WrapPanel>
                </Grid>
            </Border>
        </GroupBox>
    </Grid>
</Page>
