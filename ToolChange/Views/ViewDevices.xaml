<Page x:Class="ToolChange.Views.ViewDevices"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ToolChange.Views"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <Grid Background="#F5F7FC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        

        <Rectangle Grid.Column="1"
                   Width="1"
                   Fill="Gray"
                   VerticalAlignment="Stretch"
                   Margin="5,0" />
        <Border Grid.Column="2">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
                       Content="{Binding LanguageVM.LableViewDevice1}"
                       VerticalAlignment="Center"
                       FontSize="12" />
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Slider Grid.Column="0"
                            x:Name="ResolutionValueSlider"
                            Width="100"
                            Minimum="1280"
                            Maximum="2560"
                            Value="1280"
                            TickFrequency="640"
                            IsSnapToTickEnabled="True"
                            VerticalAlignment="Center" />
                    <TextBlock Grid.Column="1"
                               x:Name="ResolutionValue"
                               Text="1280"
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="12" />
                </Grid>

                <!-- Dòng 2: Tỷ lệ khung hình (%) -->
                <Label Grid.Row="2"
                       Content="{Binding LanguageVM.LableViewDevice2}"
                       VerticalAlignment="Center"
                       FontSize="12" />
                <Grid Grid.Row="3"
                      Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Slider Grid.Column="0"
                            x:Name="ScaleValueSlider"
                            Width="100"
                            Minimum="100"
                            Maximum="200"
                            Value="150"
                            TickFrequency="50"
                            IsSnapToTickEnabled="True"
                            VerticalAlignment="Center" />
                    <TextBlock Grid.Column="1"
                               x:Name="ScaleValue"
                               Text="150"
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="12" />
                </Grid>

                <Grid Grid.Row="4"
                      Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Column="0"
                              Width="30"
                              Height="30"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              Margin="5,0,0,0"
                              IsChecked="True">

                    </CheckBox>

                    <Label Grid.Column="1"
                           Content="{Binding LanguageVM.ControlCheckScreen}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
                </Grid>
                <Grid Grid.Row="5"
                      Margin="5,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label  Content="{Binding LanguageVM.LabelNumberDevice}" />
                    <Label Content="1"
                           Grid.Column="1" />
                </Grid>
                <Grid Grid.Row="6">
                    <WrapPanel Orientation="Horizontal"
                               VerticalAlignment="Top">
                        <Button Content="View"
                                Margin="2"
                                Background="#B0E0E6"
                                Foreground="Black"
                                FontSize="11" />
                        <Button Content="Close All"
                                Background="#B0E0E6"
                                Foreground="Black"
                                Margin="2"
                                FontSize="11" />
                        <Button Content="Refresh"
                                Background="#B0E0E6"
                                Margin="2"
                                Foreground="Black"
                                FontSize="11" />
                        <Button Content="Push File"
                                Background="#B0E0E6"
                                Foreground="Black"
                                Margin="2"
                                FontSize="11" />
                        <Button Content="Install APK"
                                Background="#B0E0E6"
                                Margin="2"
                                Foreground="Black"
                                FontSize="11" />
                    </WrapPanel>
                </Grid>
                <Rectangle Grid.Row="7"
                           Height="1"
                           Fill="Gray"
                           Margin="0,10,0,10" />
                <Grid Grid.Row="8">
                    <Border Margin="2"
                            Background="#B0B0B0"
                            BorderBrush="#A0A0A0"
                            BorderThickness="1">

                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
