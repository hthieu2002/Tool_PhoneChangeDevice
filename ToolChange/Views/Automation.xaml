<Page x:Class="ToolChange.Views.Automation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:ToolChange.Views"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <Grid Background="#F5F7FC">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="7.0*" />
            <RowDefinition Height="3.0*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"
                   Content="{Binding LanguageVM.Automation}"
                   Background="Transparent"
                   FontSize="14"
                   HorizontalContentAlignment="Left"
                   VerticalContentAlignment="Center"
                   Padding="20,0,0,0" />
            <materialDesign:PackIcon Grid.Column="1"
                                     Kind="User"
                                     Width="24"
                                     Height="24"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Right" />
            <Label Content="{Binding AutomationListVM.User}"
                   Grid.Column="2"
                   HorizontalContentAlignment="Right"
                   Padding="10"
                   VerticalContentAlignment="Center"
                   Margin="10,0,20,0" />


        </Grid>
        <Grid Grid.Row="1"
              Margin="3">
            <!-- Không cần ScrollViewer ở đây -->

            <DataGrid x:Name="DeviceDataGrid"
                      Background="#F0F2F5"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      IsReadOnly="False"
                      RowHeight="35"
                      AlternatingRowBackground="LightGray"
                      BorderBrush="Gray"
                      BorderThickness="1"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ItemsSource="{Binding AutomationListVM.Devices}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#"
                                        Binding="{Binding Index}"
                                        Width="40"
                                        IsReadOnly="True"
                                        MinWidth="50" />
                    <DataGridTemplateColumn Header="Box"
                                            Width="60"
                                            MinWidth="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Command="{Binding DataContext.AutomationListVM.IsCheckBoxDevice, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                          CommandParameter="{Binding}"
                                          HorizontalAlignment="Center" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Name}"
                                        IsReadOnly="True"
                                        Width="70"
                                        MinWidth="50" />
                    <DataGridTextColumn Header="Device ID"
                                        Binding="{Binding DeviceId}"
                                        IsReadOnly="True"
                                        Width="80"
                                        MinWidth="120" />
                    <DataGridTextColumn Header="%"
                                        Binding="{Binding Percentage}"
                                        IsReadOnly="True"
                                        Width="70"
                                        MinWidth="80" />
                    <DataGridTextColumn Header="Progress"
                                        Binding="{Binding Progress}"
                                        IsReadOnly="True"
                                        Width="*"
                                        MinWidth="100" />
                    <DataGridTemplateColumn Header="Status"
                                            Width="80"
                                            MinWidth="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Status}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}"
                                                             Value="Online">
                                                    <Setter Property="Foreground"
                                                            Value="Green" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}"
                                                             Value="Offline">
                                                    <Setter Property="Foreground"
                                                            Value="Red" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Active Column with Conditional Style -->
                    <DataGridTemplateColumn Header="Active"
                                            Width="80"
                                            MinWidth="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Active}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Active}"
                                                             Value="YES">
                                                    <Setter Property="Foreground"
                                                            Value="Green" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Active}"
                                                             Value="NO">
                                                    <Setter Property="Foreground"
                                                            Value="Red" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Border Grid.Row="2"
                BorderThickness="1"
                Margin="0,10,0,0"
                CornerRadius="3"
                Padding="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="6*" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        Background="#F0F2F5"
                        BorderBrush="#FFC8C2C2"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0"
                              Margin="10,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding AutomationListVM.LoadFileScript}"
                                      SelectedItem="{Binding AutomationListVM.SelectedFileScript, Mode=TwoWay}"
                                      materialDesign:HintAssist.Hint="Chọn file script"
                                      Background="Transparent"
                                      Margin="10,0,10,0" />
                            <Button Grid.Column="1"
                                    Background="#A48EFF"
                                    BorderBrush="#7D60C5"
                                    Margin="10,0,20,0"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Command="{Binding AutomationListVM.LoadFileCommand}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"
                                    FontSize="13">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="UploadOutline"
                                                             Width="16"
                                                             Height="16"
                                                             Margin="0,0,5,0"
                                                             VerticalAlignment="Center" />
                                    <TextBlock Text="Load file"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </Grid>
                        <Border Grid.Column="0"
                                Grid.Row="1"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="3">
                            <Grid Margin="5,0,5,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0"
                                          IsEnabled="{Binding AutomationListVM.IsDisableRunFile}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="30" />
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="2"
                                                Content="+"
                                                Width="30"
                                                Height="30"
                                                Foreground="Black"
                                                Padding="0"
                                                Click="BtnIncrease_Click"
                                                Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                                                VerticalAlignment="Center" />


                                        <TextBox Grid.Column="1"
                                                 x:Name="NumberTextBox"
                                                 Width="30"
                                                 Height="30"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 Text="0"
                                                 PreviewTextInput="TextBox_PreviewTextInput"
                                                 HorizontalContentAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 />
                                        <Button Grid.Column="0"
                                                Content="-"
                                                Width="30"
                                                Height="30"
                                                Foreground="Black"
                                                Padding="0"
                                                Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                                                VerticalAlignment="Center"
                                                Click="BtnDecrease_Click">
                                        </Button>
                                    </Grid>

                                    <CheckBox Grid.Column="1"
                                              Width="30"
                                              Height="30"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              Margin="5,0,0,0"
                                              IsChecked="{Binding AutomationListVM.IsCheckedRunFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                                    </CheckBox>

                                    <Label Grid.Column="1"
                                           Content="{Binding LanguageVM.CheckBoxAutomation}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="20,0,0,0" />
                                </Grid>
                                <Button Grid.Column="1"
                                        Background="#00796B"
                                        Margin="10,0,10,0"
                                        Padding="0"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        FontSize="11"
                                        >
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Play"
                                                                 Width="16"
                                                                 Height="16"
                                                                 Margin="0,0,5,0"
                                                                 VerticalAlignment="Center" />
                                        <TextBlock Text="Run script"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Button Grid.Column="2"
                                        x:Name="codeScript"
                                        Background="#9C4DCC"
                                        Margin="5,0,5,0"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        FontSize="11"
                                        Padding="0"
                                        Click="codeScript_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ScriptOutline"
                                                                 Width="16"
                                                                 Height="16"
                                                                 Margin="0,0,5,0"
                                                                 VerticalAlignment="Center" />
                                        <TextBlock Text="Code script"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>
                    </Grid>

                </Border>
                <Border Grid.Column="1"
                        BorderBrush="#FFC8C2C2"
                        Background="#F0F2F5"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="3">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Margin="0,10,0,0">
                        <WrapPanel>
                            <ComboBox Margin="10,0,5,10"
                                      Width="120" />
                            <Button  Margin="5,0,5,10"
                                     Padding="5,0,10,0"
                                     Background="#A48EFF"
                                     BorderBrush="#7D60C5"
                                     Style="{StaticResource MaterialDesignRaisedButton}"
                                     FontSize="13"
                                     Command="{Binding AutomationListVM.LoadDevicesCommand}"
                                     CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Reload"
                                                             Width="16"
                                                             Height="16"
                                                             Margin="0,0,5,0"
                                                             VerticalAlignment="Center" />
                                    <TextBlock Text="Load device"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                            <Button  Margin="5,0,5,10"
                                     Background="#A48EFF"
                                     BorderBrush="#7D60C5"
                                     FontSize="13"
                                     FontFamily="Segoe UI"
                                     Padding="5,10"
                                     Style="{StaticResource MaterialDesignRaisedButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="BackupRestore"
                                                             Width="16"
                                                             Height="16"
                                                             Margin="0,0,5,0"
                                                             VerticalAlignment="Center" />
                                    <TextBlock Text="Backup"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                            <Button  Margin="5,0,5,10"
                                     Background="#A48EFF"
                                     BorderBrush="#7D60C5"
                                     FontSize="13"
                                     Command="{Binding AutomationListVM.ScreenShotDevicesCommand}"
                                     CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"
                                     Style="{StaticResource MaterialDesignRaisedButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CellphoneScreenshot"
                                                             Width="16"
                                                             Height="16"
                                                             Margin="0,0,5,0"
                                                             VerticalAlignment="Center" />
                                    <TextBlock Text="Screenshot"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                            <Grid Margin="10,0,5,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                         Padding="5,0,0,5"
                                         Style="{StaticResource MaterialDesignTextBoxBase}"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Stretch" />
                                <Button Grid.Column="1"
                                        Margin="10,0,0,0"
                                        Background="#A48EFF"
                                        BorderBrush="#7D60C5"
                                        FontSize="13"
                                        Style="{StaticResource MaterialDesignRaisedButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="DeleteRestore"
                                                                 Width="16"
                                                                 Height="16"
                                                                 Margin="0,0,5,0"
                                                                 VerticalAlignment="Center" />
                                        <TextBlock Text="Restore"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </WrapPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
