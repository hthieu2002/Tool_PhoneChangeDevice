<Window x:Class="ToolChange.Views.ScriptAutomation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolChange.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Height="700"
        Width="1300"
        Title="Script automation edit">
    <Grid Background="#F5F7FC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="450" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0"
                Margin="10,0,0,0"
                BorderBrush="#FFC8C2C2"
                BorderThickness="1"
                CornerRadius="3"
                Padding="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>
                <Grid Margin="10">
                    <Border BorderBrush="#D3D3D3"
                            BorderThickness="1"
                            Background="LightPink">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="25" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <ListBox x:Name="lineNumbers"
                                     Grid.Column="0"
                                     Background="RosyBrown"
                                     Foreground="White"
                                     BorderThickness="0"
                                     SelectionMode="Single"
                                     VerticalContentAlignment="Center"
                                     ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderThickness="0">
                                                        <ContentPresenter VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Height"
                                                Value="20" />
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected"
                                                     Value="True">
                                                <Setter Property="Background"
                                                        Value="#B0C4DE" />
                                                <Setter Property="Foreground"
                                                        Value="Black" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <ScrollViewer x:Name="textScrollViewer"
                                              Grid.Row="0"
                                              VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Auto"
                                              ScrollChanged="TextScrollViewer_ScrollChanged">
                                    <TextBox x:Name="editTextBox"
                                             Background="LightGray"
                                             Foreground="Black"
                                             BorderThickness="0"
                                             VerticalAlignment="Stretch"
                                             HorizontalAlignment="Stretch"
                                             FontSize="14"
                                             AcceptsReturn="True"
                                             Padding="5"
                                             Text="{Binding ScriptAutomationVM.TextBoxContent, UpdateSourceTrigger=PropertyChanged}"
                                             TextChanged="EditTextBox_TextChanged"
                                             KeyDown="EditTextBox_KeyDown"
                                             MouseDown="EditTextBox_MouseDown" />
                                </ScrollViewer>
                                <StackPanel Grid.Row="1"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <TextBlock x:Name="editIndicator"
                                               Text=""
                                               Foreground="Red"
                                               FontSize="14"
                                               Margin="5,0,0,0"
                                               Visibility="Collapsed" />
                                    <TextBlock Text=" (Đã chỉnh sửa)"
                                               Foreground="Red"
                                               FontSize="12"
                                               Visibility="Collapsed" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
                <Border  Grid.Row="1"
                         Margin="10,10,10,20"
                         BorderBrush="#FFC8C2C2"
                         BorderThickness="1"
                         CornerRadius="3"
                         Padding="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox Name="FileScript"
                                  Margin="5,0,5,0"
                                  materialDesign:HintAssist.Hint="Chọn file script"
                                  Padding="0"
                                  ItemsSource="{Binding ScriptAutomationVM.LoadFileScript}"
                                  SelectedItem="{Binding ScriptAutomationVM.SelectedFileScript, Mode=TwoWay}" />
                        <Button Grid.Column="1"
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                FontSize="12"
                                Padding="5,0,10,0"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding ScriptAutomationVM.LoadFileCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"
                                Background="#FF5FC3FC">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileUpload"
                                                         Width="16"
                                                         Height="16"
                                                         Margin="0,0,5,0"
                                                         VerticalAlignment="Center" />
                                <TextBlock Text="Load file"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="2"
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                FontSize="12"
                                Padding="5,0,10,0"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding ScriptAutomationVM.CreateFileCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileDocumentPlus"
                                                         Width="16"
                                                         Height="16"
                                                         Margin="0,0,5,0"
                                                         VerticalAlignment="Center" />
                                <TextBlock Text="Create"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="3"
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                FontSize="12"
                                Padding="5,0,10,0"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding ScriptAutomationVM.DeleteScriptCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"
                                Background="#FFD95F44">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete"
                                                         Width="16"
                                                         Height="16"
                                                         Margin="0,0,5,0"
                                                         VerticalAlignment="Center" />
                                <TextBlock Text="Delete"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

        </Border>
        <Border Grid.Column="1"
                BorderThickness="1"
                CornerRadius="3"
                Padding="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Button Margin="10,10,10,0"
                            Grid.Column="0"
                            FontSize="13"
                            Padding="0"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding ScriptAutomationVM.SaveCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"
                            Background="#FF007922">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="File"
                                                     Width="16"
                                                     Height="16"
                                                     Margin="0,0,5,0"
                                                     VerticalAlignment="Center" />
                            <TextBlock Text="Save script"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button Margin="10,10,10,0"
                            Grid.Column="1"
                            FontSize="13"
                            Padding="5,0,10,0"
                            Background="#FF70A65C"
                            Style="{StaticResource MaterialDesignRaisedButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="EyeOutline"
                                                     Width="16"
                                                     Height="16"
                                                     Margin="0,0,5,0"
                                                     VerticalAlignment="Center" />
                            <TextBlock Text="View "
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button Margin="10,10,10,0"
                            Grid.Column="2"
                            FontSize="13"
                            Padding="5,0,10,0"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding ScriptAutomationVM.SendCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Send"
                                                     Width="16"
                                                     Height="16"
                                                     Margin="0,0,5,0"
                                                     VerticalAlignment="Center" />
                            <TextBlock Text="Send"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="46*" />
                        <ColumnDefinition Width="229*" />
                        <ColumnDefinition Width="118*" />
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0"
                             Margin="10,24,10,0"
                             Padding="5,0,0,5"
                             Text="{Binding ScriptAutomationVM.TextSendContext}"
                             Style="{StaticResource MaterialDesignTextBoxBase}"
                             VerticalAlignment="Top"
                             Grid.ColumnSpan="2" />
                    <Button Margin="10,19,10,9"
                            Grid.Column="2"
                            FontSize="13"
                            Padding="5,0,10,0"
                            FontWeight="Normal"
                            Style="{StaticResource MaterialDesignRaisedButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="SendCheck"
                                                     Width="16"
                                                     Height="16"
                                                     Margin="0,0,5,0"
                                                     VerticalAlignment="Center" />
                            <TextBlock Text="Test"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="2">
                    <Border Margin="20, 5, 20,5"
                            Background="#B0B0B0"
                            BorderBrush="#A0A0A0"
                            BorderThickness="1">

                        <Image x:Name="ImageContainer"
                               Source="{Binding ScriptAutomationVM.ScreenshotImage}"
                               Stretch="Uniform"
                               MouseMove="ImageContainer_MouseMove"
                               MouseLeftButtonDown="ImageContainer_MouseLeftButtonDown" />

                    </Border>
                </Grid>
            </Grid>
        </Border>
        <Border Grid.Column="2"
                Margin="0,0,10,0"
                BorderBrush="#FFC8C2C2"
                BorderThickness="1"
                CornerRadius="3"
                Padding="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Thanh tiêu đề trên cùng -->
                <Border Grid.Row="0"
                        Background="#E0E0E0"
                        Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="txbClick"
                                   Text="Click"
                                   MouseLeftButtonDown="Tab_Click"
                                   Tag="Click"
                                   Margin="0,2,10,2"
                                   FontSize="13"
                                   Style="{StaticResource MaterialDesignTextBlock}"
                                   Cursor="Hand" />
                        <TextBlock Text="Text"
                                   x:Name="txbText"
                                   MouseLeftButtonDown="Tab_Click"
                                   Tag="Text"
                                   Margin="0,2,10,2"
                                   FontSize="13"
                                   Style="{StaticResource MaterialDesignTextBlock}"
                                   Cursor="Hand" />
                        <TextBlock Text="Key button"
                                   x:Name="txbKeyButton"
                                   MouseLeftButtonDown="Tab_Click"
                                   Tag="KeyButton"
                                   Margin="0,2,10,2"
                                   FontSize="13"
                                   Style="{StaticResource MaterialDesignTextBlock}"
                                   Cursor="Hand" />
                        <TextBlock Text="Data/Change info"
                                   x:Name="txbDataChangeInfo"
                                   MouseLeftButtonDown="Tab_Click"
                                   Tag="DataChange"
                                   Margin="0,2,10,2"
                                   FontSize="13"
                                   Cursor="Hand"
                                   Style="{StaticResource MaterialDesignTextBlock}" />
                        <TextBlock Text="General"
                                   x:Name="txbGeneral"
                                   MouseLeftButtonDown="Tab_Click"
                                   Tag="General"
                                   Margin="0,2,10,2"
                                   Cursor="Hand"
                                   Style="{StaticResource MaterialDesignTextBlock}"
                                   FontSize="13" />
                    </StackPanel>
                </Border>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="350" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Border  Background="#F5F7FC"
                             Grid.Row="0"
                             BorderBrush="#FFC8C2C2"
                             CornerRadius="2"
                             BorderThickness="1">
                        <Frame x:Name="ScriptFrame"
                               NavigationUIVisibility="Hidden"
                               Margin="4" />
                    </Border>
                    <Border Background="#F5F7FC"
                            Grid.Row="1"
                            BorderBrush="#FFC8C2C2"
                            CornerRadius="2"
                            BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label x:Name="MousePositionLabel"
                                       Content="{Binding ScriptAutomationVM.MousePosition}"
                                       HorizontalContentAlignment="Center"
                                       VerticalContentAlignment="Center"
                                       Grid.Row="0" />
                                <Label Content="Model dump"
                                       Grid.Row="1"
                                       HorizontalContentAlignment="Center"
                                       VerticalContentAlignment="Center" />
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <ComboBox Margin="10,0,5,10"
                                          ItemsSource="{Binding ScriptAutomationVM.AdbDevices}"
                                          SelectedItem="{Binding ScriptAutomationVM.SelectedDevice, Mode=TwoWay}"
                                          Grid.Row="0" />
                                <ComboBox Margin="10,0,5,10"
                                          Grid.Row="1" />
                            </Grid>
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Margin="5,10,0,0"
                                            FontSize="11"
                                            Padding="5,0,5,0"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Command="{Binding ScriptAutomationVM.LoadDevicesCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Reload"
                                                                     Width="16"
                                                                     Height="16"
                                                                     Margin="0,0,5,0"
                                                                     VerticalAlignment="Center" />
                                            <TextBlock Text="Load devices"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                    <Button HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Grid.Column="1"
                                            Margin="5,10,0,0"
                                            FontSize="11"
                                            Padding="5,0,10,0"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Command="{Binding ScriptAutomationVM.CaptureCommand}"
                                            Background="#FF628890">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="CellphoneScreenshot"
                                                                     Width="16"
                                                                     Height="16"
                                                                     Margin="0,0,5,0"
                                                                     VerticalAlignment="Center" />
                                            <TextBlock Text="Capture"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <Label Content="{Binding ScriptAutomationVM.LogText}"
                                       Grid.Row="1"
                                       HorizontalContentAlignment="Stretch"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center" />
                            </Grid>
                        </Grid>
                    </Border>
                    <Border Background="#F5F7FC"
                            Grid.Row="2"
                            BorderBrush="#FFC8C2C2"
                            CornerRadius="2"
                            BorderThickness="1">
                        <Grid Margin="10">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <DataGrid x:Name="dataGridView"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          RowHeaderWidth="0"
                                          IsReadOnly="True"
                                          SelectionMode="Single"
                                          SelectionUnit="FullRow"
                                          FontFamily="Segoe UI"
                                          FontSize="11"
                                          CanUserResizeRows="False"
                                          BorderBrush="#A0A0A0"
                                          BorderThickness="1"
                                          GridLinesVisibility="All"
                                          ItemsSource="{Binding ScriptAutomationVM.ElementDetailPairs}">

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Key"
                                                            Binding="{Binding Key}"
                                                            Width="*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Padding"
                                                            Value="5,0" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Value"
                                                            Binding="{Binding Value}"
                                                            Width="2*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Padding"
                                                            Value="5,0" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>

                                    <DataGrid.Resources>
                                        <!-- Header style -->
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Foreground"
                                                    Value="Black" />
                                            <Setter Property="Height"
                                                    Value="30" />
                                            <Setter Property="FontWeight"
                                                    Value="Bold" />
                                            <Setter Property="HorizontalAlignment"
                                                    Value="Center" />
                                            <Setter Property="BorderBrush"
                                                    Value="#A0A0A0" />
                                            <Setter Property="BorderThickness"
                                                    Value="0" />
                                        </Style>

                                        <!-- Cell style -->
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="BorderBrush"
                                                    Value="#D3D3D3" />
                                            <Setter Property="BorderThickness"
                                                    Value="0,0,0,1" />
                                            <Setter Property="Background"
                                                    Value="#F5F5F5" />
                                            <Setter Property="Foreground"
                                                    Value="Black" />
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#D3D3D3" />
                                                </Trigger>
                                                <Trigger Property="IsSelected"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#B0C4DE" />
                                                    <Setter Property="Foreground"
                                                            Value="Black" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.Resources>
                                </DataGrid>

                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>

            </Grid>

        </Border>
    </Grid>
</Window>
